<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
    xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xmlns:ext="http://www.liquibase.org/xml/ns/dbchangelog-ext"
    xmlns:pro="http://www.liquibase.org/xml/ns/pro"
    xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
        http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-latest.xsd
        http://www.liquibase.org/xml/ns/dbchangelog-ext http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-ext.xsd
        http://www.liquibase.org/xml/ns/pro http://www.liquibase.org/xml/ns/pro/liquibase-pro-latest.xsd">
	<changeSet id="202303271856" author="Ali Khattab">
		<createTable tableName="tasks">
			<column name="id" type="uuid">
				<constraints primaryKey="true" primaryKeyName="task_id_pk" />
			</column>
			<column name="username" type="varchar(250)"></column>
			<column name="due_date" type="timestamp"></column>
			<column name="complete" type="boolean" defaultValueBoolean="false"></column>
		</createTable>
		<createSequence sequenceName="hibernate_sequence" incrementBy="1" startValue="1" />
	</changeSet>
</databaseChangeLog>